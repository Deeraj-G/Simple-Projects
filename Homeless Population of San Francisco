import matplotlib.pyplot as plt; plt.rcdefaults()
import numpy as np

print('SPA 1 = Antelope Valley')
print('SPA 2 = San Fernando Valley')
print('SPA 3 = San Gabriel Valley')
print('SPA 4 = Metro LA')
print('SPA 5 = West LA')
print('SPA 6 = South LA')
print('SPA 7 = East LA')
print('SPA 8 = South Bay Harbor')

"""Sheltered Youths"""

objects = ('SPA 1', 'SPA 2', 'SPA 3', 'SPA 4', 'SPA 5', 'SPA 6', 'SPA 7', 'SPA 8')
y_pos = np.arange(len(objects))
performance = [572, 1775, 1407, 4716, 1180, 2364, 1266, 1686]
 
plt.bar(y_pos, performance, align='center', alpha=0.5)
plt.xticks(y_pos, objects)
plt.xlabel('Geographic Area')
plt.ylabel('Number of Sheltered Homeless')
plt.title('Sheltered Homeless Population in LA')
 
plt.show()

"""Unsheltered Youths"""

objects = ('SPA 1', 'SPA 2', 'SPA 3', 'SPA 4', 'SPA 5', 'SPA 6', 'SPA 7', 'SPA 8')
