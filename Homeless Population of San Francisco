"""Total"""

objects = ('SPA 1', 'SPA 2', 'SPA 3', 'SPA 4', 'SPA 5', 'SPA 6', 'SPA 7', 'SPA 8', 'Total')
y_pos = np.arange(len(objects))
performance = [4559, 7459, 3552, 15939, 5511, 9243, 5189, 4282, 55188]
 
plt.bar(y_pos, performance, align='center', alpha=0.5)
plt.xticks(y_pos, objects)
